@using Projekt.Models;
@using WebApp.Models
@model List<Room>
@{
    ViewData["Title"] = "Rooms";
}

<h1>Rooms</h1>

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category</th>
                <th>Room name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.Category?.Name</td>
                    <td>@room.Name</td>
                    <td>@room.Price?.ToString("c")</td>
                    <td>@room.Quantity</td>
                    <td><a class="btn btn-link" asp-controller="rooms" asp-action="edit" asp-route-id="@room.Id">Edit</a></td>
                    <td><a class="btn btn-link" asp-controller="rooms" asp-action="delete" asp-route-id="@room.Id" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>

    <br/>
}

<a class="btn btn-primary" asp-controller="rooms" asp-action="add">Add room</a>

@section Scripts
                    {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this room?");
        }
    </script>
}